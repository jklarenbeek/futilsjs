{
	"version": "0.2.0",
	"configurations": [
    {
      "name": "Debug JSONSchema",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:1234/index.html",
      "webRoot": "${workspaceFolder}/dist",
      "trace": true,
      "breakOnLoad": true,
      "smartStep": true,
      "showAsyncStacks": true,
      "skipFiles": [
          "node_modules/**"
      ],
      "sourceMaps": true,
      "sourceMapPathOverrides": {
          "./src/*": "${webRoot}/*",
          "./test/JSONSchema/*": "${webRoot}/*"
      },
    }
	]
}